{
  "kind": "collectionType",
  "collectionName": "places",
  "info": {
    "singularName": "place",
    "pluralName": "places",
    "displayName": "Place",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "lat": {
      "type": "float",
      "required": false
    },
    "lng": {
      "type": "float",
      "required": false
    },
    "city": {
      "type": "string",
      "required": true
    },
    "location": {
      "type": "string",
      "required": true
    },
    "festivals": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::festival.festival",
      "mappedBy": "place"
    },
    "geolocation": {
      "type": "customField",
      "customField": "plugin::geodata.geojson",
      "options": {
        "info": true
      }
    },
    "geohash": {
      "type": "string"
    },
    "inPoland": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "region": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "inPoland"
            },
            true
          ]
        }
      },
      "required": false
    }
  }
}
